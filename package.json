{
  "name": "kiku",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "package": "turbo run package",
    "dev": "turbo run dev --env-mode=loose",
    "typecheck": "turbo run typecheck",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "lint": "biome lint .",
    "lint:write": "biome lint --write .",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "copyDist": "turbo run copyDist",
    "updateNoteType": "turbo run updateNoteType",
    "generateTemplate": "turbo run generateTemplate",
    "apply": "turbo run apply"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "turbo": "^2.6.1",
    "typescript": "~5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
